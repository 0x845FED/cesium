    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch CesiumJS in Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "npm: start"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch CesiumJS Server",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "start"],
            "noDebug": true
        }
    ]
}
